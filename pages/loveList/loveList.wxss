.container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.list-container{
  margin: 50rpx 0 0 35rpx;
  border-radius: 10rpx;
  width: 320rpx;
  height: 436rpx;

}
.item-bg{
  background: #fff;
  height: 38%;
  position: relative;
  display: flex;
  flex-direction:column;
}
.item-title{
  color: #333333;
  font-size: 32rpx;
  margin:20rpx 0 0 20rpx;
  font-weight: bolder;
}
.item-intro{
  color: #666666;
  font-size: 20rpx;
  margin:10rpx 0 0 20rpx; 
}
.price-container{
 
  margin:5rpx 0 0 20rpx;
  
}
.now-price{
 color:#FF001F;
  font-size: 32rpx;
